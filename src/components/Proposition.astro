---
import TestimonialCard from "./TestimonialCard.astro";

---

<section class="mt-[120px]">
  <picture class="w-full">
    <source srcset="/images/bg-curve-desktop.svg" media="(min-width: 800px)" />
    <img src="/images/bg-curve-mobile.svg" alt="" class="w-full" />
  </picture>
  <div class="w-full bg-light-grayish-blue">
    <div class="container">
      <div class="flex">
        <div class="flex-1 py-10">
          <h2 class="text-[37px] font-Raleway font-bold">
            Stay productive, wherever you are
          </h2>
          <p class="text-[14.7px] max-w-[30rem] mt-5">
            Never let location be an issue when accessing your files. Fylo has
            you covered for all of your file storage needs. 
          </p>
          <p class="text-[14.7px] max-w-[30rem] mt-4">
            Securely share files
            and folders with friends, family and colleagues for live
            collaboration. No email attachments required!
          </p>
          <a href="" class="flex items-center w-fit border-b text-[14.7px] text-moderate-cyan border-moderate-cyan gap-2 mt-4">
            <span>See how Fylo works</span>
            <img src="/images/icon-arrow.svg" alt="" class="h-[23px]"/>
            
          </a>
          
          <TestimonialCard />
        </div>
        <div class="flex-1">
          <img src="/images/illustration-2.svg" alt="" />
        </div>
      </div>
    </div>
  </div>
</section>


<style>
  a:hover img {
    transform: translate(5px);
  }
  </style>